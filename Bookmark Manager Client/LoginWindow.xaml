<Window x:Class="Bookmark_Manager_Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookmark_Manager_Client"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Host" Grid.Row="0" Grid.Column="0"/>
        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TextBlockHost" Text="{Binding Host}"/>
        <Label Content="Port" Grid.Row="1" Grid.Column="0"/>
        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TextBlockPort" Text="{Binding Port}"/>
        <Label Content="Username" Grid.Row="2" Grid.Column="0"/>
        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TextBlockUsername" Text="{Binding Username}"/>
        <Label Content="Password" Grid.Row="3" Grid.Column="0"/>
        <PasswordBox Grid.Row="3" Grid.Column="1" x:Name="TextBlockPassword"/>
        <Button x:Name="ButtonLogin" Content="Login" Grid.Row="4" Grid.Column="0"/>
        <Button x:Name="ButtonCancel" Content="Cancel" Grid.Row="4" Grid.Column="1"/>
    </Grid>
</Window>
