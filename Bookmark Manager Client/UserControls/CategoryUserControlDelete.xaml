<ui:ContentDialog x:Class="Bookmark_Manager_Client.UserControls.CategoryUserControlDelete"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:loc="clr-namespace:Bookmark_Manager_Client.Localization"
             xmlns:local="clr-namespace:Bookmark_Manager_Client.UserControls"
             mc:Ignorable="d" 
            DataContext="{Binding RelativeSource={RelativeSource Self}}"
            Title="{loc:Localization CategoryDeleteQuestionString}"
            PrimaryButtonText="{loc:Localization ButtonDeleteString}"
            CloseButtonText="{loc:Localization ButtonCancelString}"
            DefaultButton="Primary">
    <Grid>
        <TextBlock>
            <Run Text="{loc:Localization CategoryDeleteTextString01}"/>
            <Run Text="{Binding CategoryName}" FontWeight="Bold"/>
            <Run Text="{loc:Localization CategoryDeleteTextString02}"/>
        </TextBlock>
    </Grid>
</ui:ContentDialog>
