<ui:ContentDialog x:Class="Bookmark_Manager_Client.UserControls.CategoryUserControlDelete"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bookmark_Manager_Client.UserControls"
             mc:Ignorable="d" 
            DataContext="{Binding RelativeSource={RelativeSource Self}}"
            Title="Delete category?"
            PrimaryButtonText="Delete"
            CloseButtonText="Cancel"
            DefaultButton="Primary">
    <Grid>
        <TextBlock Text="{Binding CategoryName, StringFormat='Delete category {0}? All child categories and bookmarks will be deleted.'}"/>
    </Grid>
</ui:ContentDialog>
